generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id       Int       @id @default(autoincrement())
  Name     String
  Email    String    @unique
  UserId  String @unique
  Password String
  Class    Int
  comments Comment[]
}

model Question {
  Id       Int       @id @default(autoincrement())
  ThemeId  Int
  Contents String
  comments Comment[]
}

model Verify {
  Email String @id
  Name  String
  Class Int
}

model Comment {
  Id         Int      @id @default(autoincrement())
  QuestionId Int
  AuthorId   Int
  Contents   String
  Class      Int
  author     User     @relation(fields: [AuthorId], references: [Id])
  question   Question @relation(fields: [QuestionId], references: [Id])
}
